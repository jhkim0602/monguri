{
  "openapi": "3.0.3",
  "info": {
    "title": "Mentor/Mentee API (Draft)",
    "version": "0.2.0"
  },
  "paths": {
    "/mentor/students": {
      "get": {
        "summary": "멘토 학생 목록",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/MenteeSummary" }
                }
              }
            }
          }
        }
      }
    },
    "/mentor/students/{id}": {
      "get": {
        "summary": "학생 상세",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MenteeDetail" }
              }
            }
          }
        }
      }
    },
    "/mentor/students/{id}/calendar": {
      "get": {
        "summary": "학생 캘린더 조회",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "from", "in": "query", "schema": { "type": "string", "format": "date" } },
          { "name": "to", "in": "query", "schema": { "type": "string", "format": "date" } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/CalendarDay" }
                }
              }
            }
          }
        }
      }
    },
    "/mentor/students/{id}/planner": {
      "get": {
        "summary": "학생 플래너 조회",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "from", "in": "query", "schema": { "type": "string", "format": "date" } },
          { "name": "to", "in": "query", "schema": { "type": "string", "format": "date" } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/PlannerDay" }
                }
              }
            }
          }
        }
      }
    },
    "/mentor/students/{id}/planner/aggregate": {
      "get": {
        "summary": "플래너 모아보기(주간/월간)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "range", "in": "query", "schema": { "type": "string", "enum": ["week", "month"] } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/PlannerAggregateCard" }
                }
              }
            }
          }
        }
      }
    },
    "/mentor/tasks": {
      "get": {
        "summary": "과제 목록",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/MentorTask" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "과제 생성",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/MentorTaskInput" } }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MentorTask" } } }
          }
        }
      }
    },
    "/mentor/tasks/{id}": {
      "patch": {
        "summary": "과제 수정",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/MentorTaskPatch" } }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/assignments/{id}/feedback": {
      "post": {
        "summary": "멘토 피드백",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/FeedbackInput" } }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/planner-days/{id}/comment": {
      "post": {
        "summary": "플래너 코멘트 작성",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/PlannerCommentInput" } }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/columns": {
      "get": {
        "summary": "칼럼 목록",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/MentorColumn" }
                }
              }
            }
          }
        }
      }
    },
    "/mentor/columns": {
      "post": {
        "summary": "칼럼 작성",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/MentorColumnInput" } }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/MentorColumn" } } }
          }
        }
      }
    },
    "/mentor/columns/{id}/publish": {
      "post": {
        "summary": "칼럼 발행",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    }
  },
  "components": {
    "schemas": {
      "MenteeSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "grade": { "type": "string" },
          "goal": { "type": "string" },
          "avatarUrl": { "type": "string" }
        },
        "required": ["id", "name", "grade"]
      },
      "MenteeDetail": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "grade": { "type": "string" },
          "track": { "type": "string" },
          "goal": { "type": "string" },
          "stats": {
            "type": "object",
            "properties": {
              "studyHours": { "type": "number" },
              "attendanceRate": { "type": "string" },
              "tasksCompleted": { "type": "number" }
            }
          }
        },
        "required": ["id", "name", "grade"]
      },
      "MentorTask": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "menteeId": { "type": "string" },
          "subject": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string", "enum": ["pending", "submitted", "feedback_completed"] },
          "deadline": { "type": "string", "format": "date-time" },
          "startTime": { "type": "string" },
          "endTime": { "type": "string" },
          "mentorComment": { "type": "string" },
          "hasMentorResponse": { "type": "boolean" }
        },
        "required": ["id", "menteeId", "subject", "title", "status", "deadline"]
      },
      "MentorTaskInput": {
        "type": "object",
        "properties": {
          "menteeId": { "type": "string" },
          "subject": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "deadline": { "type": "string", "format": "date-time" },
          "startTime": { "type": "string" },
          "endTime": { "type": "string" }
        },
        "required": ["menteeId", "subject", "title", "deadline"]
      },
      "MentorTaskPatch": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "enum": ["pending", "submitted", "feedback_completed"] },
          "mentorComment": { "type": "string" }
        }
      },
      "PlannerDay": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "menteeId": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "studyTime": { "type": "number" },
          "mood": { "type": "string" },
          "memo": { "type": "string" }
        }
      },
      "PlannerAggregateCard": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "format": "date" },
          "items": { "type": "array", "items": { "type": "string" } },
          "comment": { "type": "string" }
        }
      },
      "PlannerCommentInput": {
        "type": "object",
        "properties": {
          "comment": { "type": "string" }
        },
        "required": ["comment"]
      },
      "CalendarDay": {
        "type": "object",
        "properties": {
          "date": { "type": "string", "format": "date" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "categoryId": { "type": "string" },
                "taskType": { "type": "string" }
              }
            }
          }
        }
      },
      "MentorColumn": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "seriesId": { "type": "string" },
          "title": { "type": "string" },
          "subtitle": { "type": "string" },
          "author": { "type": "string" },
          "date": { "type": "string" },
          "coverImage": { "type": "string" },
          "excerpt": { "type": "string" },
          "status": { "type": "string", "enum": ["draft", "published"] },
          "content": { "type": "string" }
        },
        "required": ["id", "seriesId", "title", "author", "status"]
      },
      "MentorColumnInput": {
        "type": "object",
        "properties": {
          "seriesId": { "type": "string" },
          "title": { "type": "string" },
          "subtitle": { "type": "string" },
          "author": { "type": "string" },
          "coverImage": { "type": "string" },
          "excerpt": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["seriesId", "title", "author"]
      },
      "FeedbackInput": {
        "type": "object",
        "properties": {
          "comment": { "type": "string" },
          "status": { "type": "string", "enum": ["approved", "revise"] }
        },
        "required": ["comment", "status"]
      }
    }
  }
}
